<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/actAcrcloudStart"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="开始" />

            <Button
                android:id="@+id/actAcrcloudStop"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="停止录音并搜索(仅哼唱)" />

            <Button
                android:id="@+id/actAcrcloudCancel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="取消" />

            <TextView
                android:id="@+id/actAcrcloudVolume"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/actAcrcloudResult"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/actAcrcloudTime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
