<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <jp.wasabeef.richeditor.RichEditor
        android:id="@+id/act_richtext_editor"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"/>
    <HorizontalScrollView
        android:visibility="gone"
        android:id="@+id/act_richtext_titlell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/act_richtext_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"/>
            <Button
                android:id="@+id/act_richtext_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"/>
            <Button
                android:id="@+id/act_richtext_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"/>
            <Button
                android:id="@+id/act_richtext_title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"/>
            <Button
                android:id="@+id/act_richtext_title5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"/>
            <Button
                android:id="@+id/act_richtext_title6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"/>
        </LinearLayout>
    </HorizontalScrollView>
    <HorizontalScrollView
        android:visibility="gone"
        android:id="@+id/act_richtext_alignmentll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/act_richtext_alignment_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="文章居中"/>
            <Button
                android:id="@+id/act_richtext_alignment_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="文章左对齐"/>
            <Button
                android:id="@+id/act_richtext_alignment_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="文章右对齐"/>
        </LinearLayout>
    </HorizontalScrollView>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/act_richtext_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="文字"/>
            <Button
                android:id="@+id/act_richtext_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题"/>
            <Button
                android:id="@+id/act_richtext_eliminate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清除"/>
            <Button
                android:id="@+id/act_richtext_redo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="恢复清除"/>
            <Button
                android:id="@+id/act_richtext_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加粗"/>
            <Button
                android:id="@+id/act_richtext_italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="斜体"/>
            <Button
                android:id="@+id/act_richtext_deletingline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除线"/>
            <Button
                android:id="@+id/act_richtext_underline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下划线"/>
            <Button
                android:id="@+id/act_richtext_quote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="引用"/>
            <Button
                android:id="@+id/act_richtext_selectionbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择框"/>
            <Button
                android:id="@+id/act_richtext_alignment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="对齐"/>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>
