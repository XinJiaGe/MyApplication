<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_ok_http"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/act_okHttp_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/act_okHttp_bt_get"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get请求"/>
        <Button
            android:id="@+id/act_okHttp_bt_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="图片请求"/>
        <Button
            android:id="@+id/act_okHttp_bt_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下载"/>
        <Button
            android:id="@+id/act_okHttp_bt_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="上传"/>
        <ImageView
            android:id="@+id/act_okHttp_iv_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/act_okHttp_tv_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
