<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_xmlextract_name"
            android:text="京东方"
            android:textSize="35px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/item_xmlextract_zong"
            android:text="111"
            android:textSize="35px"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_marginLeft="20px"
            android:layout_height="wrap_content"
            android:textColor="@color/red"/>
        <ImageView
            android:id="@+id/item_xmlextract_iamge"
            android:layout_width="50px"
            android:layout_height="50px"
            android:rotation="270"
            android:background="@drawable/icon_back_left_black2"/>
    </LinearLayout>
    <com.adaptation.lixinjia.myapplication.view.ListViewLinearLayoutView
        android:visibility="gone"
        android:id="@+id/item_xmlextract_dataListview"
        android:layout_marginLeft="20px"
        android:text="京东方"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
